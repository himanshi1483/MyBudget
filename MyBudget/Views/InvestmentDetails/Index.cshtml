@model IEnumerable<MyBudget.Models.InvestmentDetail>

@{ ViewBag.Title = "Index"; }


<link href="/Content/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/Content/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<link href="/Content/metronic/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
<!-- END PAGE LEVEL PLUGINS -->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Investment Details</span>
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a class="btn btn-fit-height green-dark" href="@Url.Action("Create")">
                                    Create
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="tools"> </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ActualAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SubCategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DebitDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ForMonth)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FinancialYear)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActualAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DebitDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ForMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinancialYear)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.InvestmentId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.InvestmentId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.InvestmentId })
                </td>
            </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="/Content/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>

<!-- END PAGE LEVEL PLUGINS -->
