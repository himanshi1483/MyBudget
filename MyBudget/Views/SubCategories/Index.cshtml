@model IEnumerable<MyBudget.Models.SubCategories>

@{
    ViewBag.Title = "Index";
}

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="@Url.Action("Create New", "Create")" class="fa fa-plus"></a>
            <a href="#" class="fa fa-caret-down"></a>
            <a href="#" class="fa fa-times"></a>
        </div>

        <h2 class="panel-title">Sub-Categories</h2>
    </header>
    <div class="panel-body">
        <table class="table table-bordered table-striped mb-none" id="datatable-default">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Frequency)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpectedAmount)
                </th>
           
                <th>
                    @Html.DisplayNameFor(model => model.ParentCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDefault)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Frequency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpectedAmount)
                    </td>
               
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentCategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDefault)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SubCategoryId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SubCategoryId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SubCategoryId })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>