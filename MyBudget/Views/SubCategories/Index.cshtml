@model IEnumerable<MyBudget.Models.SubCategories>

@{
    ViewBag.Title = "Index";
}
<!-- BEGIN PAGE LEVEL PLUGINS -->
<link href="/Content/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/Content/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<link href="/Content/metronic/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
<!-- END PAGE LEVEL PLUGINS -->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Sub-Categories</span>
                </div>
             
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a class="btn btn-fit-height green-dark" href="@Url.Action("Create", "SubCategories")">
                                    Create
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="tools"> </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Frequency)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InvestedAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TypeOfInvestment)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PortfolioNumber)
                            </th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Frequency)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvestedAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeOfInvestment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PortfolioNumber)
                            </td>


                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.SubCategoryId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.SubCategoryId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.SubCategoryId })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="/Content/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>

<!-- END PAGE LEVEL PLUGINS -->
<!-- BEGIN THEME GLOBAL SCRIPTS -->
<script src="/Content/metronic/assets/global/scripts/app.min.js" type="text/javascript"></script>
<!-- END THEME GLOBAL SCRIPTS -->
<!-- BEGIN PAGE LEVEL SCRIPTS -->
